{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "inlineSources": true,
    "stripInternal": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "../../dist/ionic-angular",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5"
  },
  "angularCompilerOptions": {
    "outDir": "../../dist/ionic-angular",
    "skipTemplateCodegen": true
  },
  "files": [
    "../../src/index.ts"
  ]
}
