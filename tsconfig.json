{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "dist/ionic-angular",
    "target": "es5",
    "types": ["jasmine", "protractor"]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}