{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/ionic-angular",
    "baseUrl": ".",
    "paths": {
      "ionic-angular": [
        "./src"
      ],
      "ionic-angular/testing": [
        "./src/testing"
      ]
    },
    "target": "es5",
    "types": ["jasmine"],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
